      [%
         IF sort == 'clicks';
            FOREACH hud IN huds.values.sort(sort, 'downloads').reverse;
               INCLUDE hud.tt;
            END;
         ELSIF sort == 'downloads';
            FOREACH hud IN huds.values.sort(sort, 'clicks').reverse;
               INCLUDE hud.tt;
            END;
         ELSE;
            FOREACH hud IN huds.values.nsort(sort).reverse;
               INCLUDE hud.tt;
            END;
         END;
      %]
